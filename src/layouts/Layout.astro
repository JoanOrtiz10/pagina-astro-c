---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-600" >

		<div class="bg-slate-800 h-[6.5rem]">
			<header class=" max-w-5xl mx-auto">
				<div class="flex  ">
					<img class="h-10 mt-8" src="https://store.akamai.steamstatic.com/public/shared/images/header/logo_steam.svg?t=962016">
					<div class=" flex space-x-8  mx-auto mt-8">
						<li class=" list-none text-blue-500 font-bold underline decoration-2  text-lg cursor-pointer  hover:text-blue-400">Tienda</li>
						<li class=" list-none text-slate-300 font-bold text-lg cursor-pointer hover:text-white">Comunidad</li>
						<li class=" list-none text-slate-300 font-bold text-lg cursor-pointer  hover:text-white"> Acerca de </li>
						<li class=" list-none text-slate-300 font-bold text-lg cursor-pointer  hover:text-white">Soporte</li>
						
					</div>
					<div class="flex mx-auto space-x-6 mt-2 pl-11" >
						<button class= "  flex w-28 px-2 py-1 bg-lime-600 hover:bg-lime-500 rounded-sm hover:text-white cursor-pointer text-slate-300 h-6 text-xs"> <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4">
							<path fill-rule="evenodd" d="M12 2.25a.75.75 0 0 1 .75.75v11.69l3.22-3.22a.75.75 0 1 1 1.06 1.06l-4.5 4.5a.75.75 0 0 1-1.06 0l-4.5-4.5a.75.75 0 1 1 1.06-1.06l3.22 3.22V3a.75.75 0 0 1 .75-.75Zm-9 13.5a.75.75 0 0 1 .75.75v2.25a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5V16.5a.75.75 0 0 1 1.5 0v2.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V16.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
						  </svg>
						  Instalar Steam</button>
						<li class=" list-none text-slate-300  hover:text-white cursor-pointer text-sm ">Iniciar sesion</li>
						<li class=" list-none text-slate-300 text-sm ">|</li>
						<li class="   list-none text-sm flex text-slate-300  hover:text-white cursor-pointer">Idioma <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
							<path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
						  </svg>
						  </li>

					</div>
				</div>
		
		</header>
	</div>
		<div class="">
			
			<div class=" pt-9 h-[28rem] bg-[url(https://shared.akamai.steamstatic.com/store_item_assets/steam/clusters/frontpage/728facaee8e82a3af6cef6a6/page_bg_spanish.jpg?t=1726694657)] ">
				<div class="flex space-x-9  max-w-5xl h-8 bg-blue-400/60  mx-auto pt-1 pl-3">
					<li class=" list-none text-white">Tu tienda</li>
					<li class=" list-none text-white"> Nuevo y destacable</li>
					<li class=" list-none text-white"> Categorias</li>
					<li class=" list-none text-white"> Tienda de puntos</li>
					<li class=" list-none text-white">Noticias</li>
					<li class=" list-none text-white"> Laboratorios</li>
					<input   class="pl-5 h-6 bg-lime-900/40  hover:border-blue-400 rounded-sm" type="text" placeholder="Buscar">
				</div>
			</div>
			
			 
		</div>
			
	</body>
</html>
